/* pages/active/active.wxss */
.doc{
  width:100%;
  min-height: 100vh;
  background: #000;
  position: relative;
}
.act-swi-img{
  width: 750rpx;
  height: 400rpx;
  position: relative;
  z-index: 100;
}
.act-swiper .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-left: 250rpx;
  margin-bottom: 2rpx;
}
.act-swiper .wx-swiper-dot{
  width:12rpx;
  height: 12rpx;
  border-radius: 50%;
  display: inline-flex;
  justify-content:space-between;
}
.bill1{
  width: 270rpx;
  height: 403rpx;
  position: absolute;
  top: 447rpx;
  left: -10rpx;
  transform: scale(1.1);
  z-index: 10;
  opacity: 0;
  animation: bill1_ani 0.8s  forwards;
}
.bill2{
  width: 261rpx;
  height: 405rpx;
  position: absolute;
  top: 400rpx;
  left: 167rpx;
  transform: scale(1.1);
  z-index: 10;
  opacity: 0;
  animation: bill2_ani 0.8s  forwards;
}
.bill3{
  width: 305rpx;
  height: 435rpx;
  position: absolute;
  top: 406rpx;
  left: 316rpx;
  transform: scale(1.1);
  z-index: 10;
  opacity: 0;
  animation: bill3_ani 0.8s  forwards;
}
.bill4{
  width: 259rpx;
  height: 404rpx;
  position: absolute;
  top: 451rpx;
  left: 494rpx;
  z-index: 10;
  opacity: 0;
  animation: bill4_ani 0.8s  forwards;
}
.button{
  position: absolute;
  top: 890rpx;
  left: 0;
  width: 100%;
  height: 126rpx;
  display: flex;
  line-height: 126rpx;
  font-size: 32rpx;
  color: #fff;
}
.button-text{
  flex: 1;
}
.button-text:first-child{
  text-align: right;
}
.button-img{
  flex:0 0 126rpx;
  width: 126rpx;
  height: 126rpx;
  margin: 0 31rpx;
  background: #787121;
  font-size: 126rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 126rpx;
}
@keyframes bill1_ani{
  0%{opacity: 0; transform: scale(1.1);}
  100%{opacity: 1; transform: translate(10rpx,20rpx) scale(1);}
}

@keyframes bill2_ani{
  0%{opacity: 0; transform: scale(1.1);}
  100%{opacity: 1; transform: scale(1);}
}

@keyframes bill3_ani{
  0%{opacity: 0; transform: scale(1.1);}
  100%{opacity: 1; transform: translate(10rpx,-20rpx) scale(1);}
}

@keyframes bill4_ani{
  0%{opacity: 0; transform: translate(0,0);}
  100%{opacity: 1; transform: translate(10rpx,20rpx);}
}